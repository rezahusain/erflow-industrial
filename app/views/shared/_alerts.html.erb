<% if notice.present? %>
  <div class="container">
    <p class="alert alert-primary mb-0" role="alert"><%= notice %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if alert.present? %>
  <div class="container">
    <p class="alert alert-danger mb-0" role="alert"><%= alert %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
