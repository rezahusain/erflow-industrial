<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid h-100 m-5 p-5 rounded-4">
    <div class="align-items-center">
      <div class="d-flex flex-column align-items-center">
        <h2 class="h1">Log in</h2>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control m-2 input-sm w-100"}%>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control m-2 input-sm w-100"}%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
        <div class="btn btn-outline-primary btn-sm w-25 m-5">
          <%= f.button :submit, "Log in"%>
        </div>
        <%= render "users/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
