<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container-fluid d-flex align-items-center justify-content-center min-vh-75">
    <div class="row justify-content-center w-100">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Log in</h2>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control mb-3"} %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "form-control mb-3"} %>
            <%= f.input :remember_me, as: :boolean, class: 'form-check-input', wrapper: false if devise_mapping.rememberable? %>
            <div class="d-grid gap-2">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-block"%>
            </div>
            <div class="text-center mt-3">
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
