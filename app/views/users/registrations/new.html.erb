<div class="container-fluid h-100 m-5 p-5">
    <div class="align-items-center">
      <div class="d-flex flex-column align-items-center">

        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :password,
                        required: true,
                        #hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "form-control m-2 input-sm w-100"} %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control m-2 input-sm w-100"} %>
            <%= f.input :username,
                        required: true,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :first_name,
                        required: true,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :last_name,
                        required: false,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :phone,
                        required: true,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :address,
                        required: false,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :city,
                        required: false,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :state,
                        required: false,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <%= f.input :zipcode,
                        required: false,
                        input_html: {class: "form-control m-2 input-sm w-100"}%>
            <br>
            Birthday
            <%= f.date_field :dob,
                        required: true%>
            <br><br>
            <%= f.radio_button :role, "patient" %>
            <%= f.label :role_patient, "I am a patient" %>
            <%= f.radio_button :role, "admin" %>
            <%= f.label :role_admin, "I am an admin" %>    
          </div>

          <div class="btn btn-outline-primary btn-sm w-40 m-5">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%#<%= render "users/shared/links" %>

    </div>
  </div>
</div>
