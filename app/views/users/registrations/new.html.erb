<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
  <div class="row justify-content-center w-100">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-group">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control mb-3"} %>
              <%= f.input :password,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control mb-3"} %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control mb-3"} %>
              <%= f.input :username,
                          required: true,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :first_name,
                          required: true,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :last_name,
                          required: false,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :phone,
                          required: true,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :address,
                          required: false,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :city,
                          required: false,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :state,
                          required: false,
                          input_html: {class: "form-control mb-3"} %>
              <%= f.input :zipcode,
                          required: false,
                          input_html: {class: "form-control mb-3"} %>

              <div class="mb-3">
                <label>Birthday</label>
                <%= f.date_field :dob,
                          required: true,
                          class: "form-control" %>
              </div>

              <div class="form-check form-check-inline">
                <%= f.radio_button :role, "patient", class: "form-check-input" %>
                <%= f.label :role_patient, "I am a patient", class: "form-check-label" %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :role, "admin", class: "form-check-input" %>
                <%= f.label :role_admin, "I am an admin", class: "form-check-label" %>
              </div>
            </div>

            <div class="d-grid gap-2 mt-4">
              <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
