<div class="container-fluid d-flex justify-content-center align-items-center vh-75">
  <div class="card w-50 p-4 shadow">
    <h2 class="card-title text-center mb-4">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :password,
                    required: true,
                    #hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :username,
                    required: true,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :first_name,
                    required: true,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :last_name,
                    required: false,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :phone,
                    required: true,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :address,
                    required: false,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :city,
                    required: false,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :state, 
                    collection: us_states, 
                    required: false, 
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <%= f.input :zipcode,
                    required: false,
                    input_html: {class: "form-control m-2 input-sm w-100"} %>

        <br>
        Birthday
        <%= f.date_field :dob, required: true %>
        <br><br>

        <%= f.radio_button :role, "patient" %>
        <%= f.label :role_patient, "I am a patient" %>
        <%= f.radio_button :role, "admin" %>
        <%= f.label :role_admin, "I am an admin" %>    
      </div>

      <div class="text-center">
        <%= f.button :submit, "Sign up", class: "btn btn-primary w-50 mt-3" %>
      </div>
    <% end %>
  </div>
</div>
