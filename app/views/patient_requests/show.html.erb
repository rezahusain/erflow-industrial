<div class="d-flex justify-content-center align-items-center flex-column p-5">
  <div class="card w-75 m-3 p-3 text-center">
    <h1 class="card-title">Details for <%= @patient_request.user.first_name%></h1>
    <p class="card-text overflow-auto p-3">Description: <%= @patient_request.description %></p>
    <ul class="list-group list-group-flush text-white opacity-50">
      <li class="list-group-item">Status: <%= @patient_request.status %></li>
      <li class="list-group-item">Pain: <%= @patient_request.pain %></li>
      <li class="list-group-item">Injury Type: <%= @patient_request.injury_type %></li>
    </ul>
    <p class="card-text overflow-auto"><%= link_to "View comments", patient_request_comments_path(@patient_request), class: "btn btn-primary btn-lg mt-4"%>
    </p>
    <!-- Button trigger modal -->
    <p class="card-text overflow-auto">
      <%= render partial: "shared/modal", locals: {image: @patient_request.image}%>
      <button class="btn btn-primary btn-lg mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
        View Image
      </button>
    </p>
  </div>
</div>

<div class="d-flex justify-content-evenly p-5 m-5">
  <%= link_to "Queue", patient_requests_path, class: "btn btn-primary btn-lg mt-4"%>
  <%= button_to "Leave the queue", @patient_request, method: :delete, class: "btn btn-primary btn-lg mt-4"%>
</div>
