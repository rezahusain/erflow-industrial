<div id="<%= dom_id patient_request %>">
<% if current_user == patient_request.user%>
  <div class="card border-success text-center mb-3" style="width: 18rem;">
    <h1 class="card-text text-success"><%= patient_request.rank %></h1>
    <div class="card-body text-success">
      <strong class="card-title"><%= patient_request.user.first_name + " " + patient_request.user.last_name %></strong>
      <p class="card-text"><%= patient_request.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Status: <%= patient_request.status %></li>
      <li class="list-group-item">Pain: <%= patient_request.pain %></li>
      <li class="list-group-item">Injury Type: <%= patient_request.injury_type %></li>
    </ul>
    <div class="card-body">
      <% if current_page?( patient_requests_path	) %>
        <%= link_to "Show more details", patient_request, class: "btn btn-primary"%>
      <% end %>
      <img src="<%= patient_request.image %>" class="card-img-top" alt="...">
    </div>
  </div>
<% else %>
  <div class="card text-center mb-3" style="width: 18rem;">
    <h1 class="card-text"><%= patient_request.rank %></h1>
    <div class="card-body">
      <strong class="card-title"><%= patient_request.user.first_name + " " + patient_request.user.last_name %></strong>
      <p class="card-text"><%= patient_request.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Status: <%= patient_request.status %></li>
      <li class="list-group-item">Pain: <%= patient_request.pain %></li>
      <li class="list-group-item">Injury Type: <%= patient_request.injury_type %></li>
    </ul>
    <div class="card-body">
      <img src="<%= patient_request.image %>" class="card-img-top" alt="...">
    </div>
  </div>
<% end %>
</div>
